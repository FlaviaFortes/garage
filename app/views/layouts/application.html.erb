  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Garage | Where the band meets" %></title>

    <%= stylesheet_link_tag    "application" %>
  	<%= stylesheet_link_tag    "google-search" %>
    <%= javascript_include_tag "vendor/custom.modernizr" %>
  	<%= javascript_include_tag "google-search" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <nav class="top-bar">
      <ul class="title-area">
        <li class="name">
          <h1><%= link_to "Garage", root_path %></h1>
        </li>
      </ul>

      <section class="top-bar-section">
        <ul class="left">
          <li class="divider"></li>
          <li class="has-dropdown">
            <a href="#">Explore</a>
            <ul class="dropdown">
              <li><a href="#">Recents</a></li>
              <li><a href="#">Most Loved</a></li>
              <li><a href="#">Random Awesomeness</a></li>
            </ul>
          </li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Sign Up</a></li>
        </ul>
      </section>

      <section class="top-bar-section">
        <ul class="right">
          <li><a href="#">Sign In</a></li>
          <li>
            <div class="row collapse">
              <div class="small-10 columns">
                <input type="text" placeholder="Search"></input>
              </div>
              <div class="small-2 columns">
                <a href="#" class="button prefix">Search</a>
              </div>
            </div>
          </li>
        </ul>
      </section>
    </nav>

    <%= yield %>


    <%= javascript_include_tag "application" %>
  </body>
</html>
