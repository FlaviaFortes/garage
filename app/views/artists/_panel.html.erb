<% @artists.each do |artist| %>
  <li class="full-size">
    <a href="<%= artist_path(artist) %>">
      <div class="image-panel">
        <div class="image-container">
        <%= image_tag artist.avatar.url(:thumb), class: "image" %>
        </div>
        <p class="image-caption"><%= artist.name %></p>
      </div>
    </a>
  </li>
<% end %>